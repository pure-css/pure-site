<a href="#menu" id="menuLink" class="menu-link">
    <span></span>
</a>
<div id="menu">
    <div class="pure-menu">
        <a class="pure-menu-heading" href="{{pathTo 'home'}}">Pure</a>
        <ul class="pure-menu-list">
          {{#each nav}}
            <li class="pure-menu-item{{#if divider}} menu-item-divided{{/if}}{{#if isActive}} pure-menu-selected{{/if}}">
                <a href="{{pathTo name}}" class="pure-menu-link">{{label}}</a>
            </li>
          {{/each}}
            <li class="pure-menu-item">
                <a href="http://blog.purecss.io/" class="pure-menu-link">Blog</a>
            </li>
            <li class="pure-menu-item">
                <a href="https://github.com/yahoo/pure/releases/" class="pure-menu-link">Releases</a>
            </li>
        </ul>
    </div>
</div>
